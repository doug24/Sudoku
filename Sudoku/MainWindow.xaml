<Window x:Class="Sudoku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sudoku"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:SudokuViewModel, IsDesignTimeCreatable=True}"
        Title="Sudoku" 
        KeyDown="Window_KeyDown"
        Height="500" Width="800">
    
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New Puzzle" Command="{Binding NewPuzzleCommand}"/>
                <MenuItem Header="Save" Command="{Binding SaveCommand}"/>
                <MenuItem Header="Restore" Command="{Binding RestoreCommand}"/>
                <MenuItem Header="Count" Command="{Binding GameBoard.ShowCountCommand}"/>
            </MenuItem>
        </Menu>
        <Border DockPanel.Dock="Left"
                BorderBrush="Blue" BorderThickness="1">
            <local:GameBoard DataContext="{Binding GameBoard}"/>
        </Border>
        <Border></Border>
    </DockPanel>
</Window>
